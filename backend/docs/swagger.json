{
    "swagger": "2.0",
    "info": {
        "description": "REST API for managing blueprints and contracts.",
        "title": "Contract Management Platform API",
        "contact": {},
        "version": "1.0"
    },
    "host": "localhost:8080",
    "basePath": "/api",
    "paths": {
        "/blueprints": {
            "get": {
                "description": "Get a list of all contract blueprints",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "blueprints"
                ],
                "summary": "List all blueprints",
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/models.Blueprint"
                            }
                        }
                    }
                }
            },
            "post": {
                "description": "Create a new contract blueprint with a schema",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "blueprints"
                ],
                "summary": "Create a blueprint",
                "parameters": [
                    {
                        "description": "Blueprint JSON",
                        "name": "blueprint",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/models.Blueprint"
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "Created",
                        "schema": {
                            "$ref": "#/definitions/models.Blueprint"
                        }
                    }
                }
            }
        },
        "/contracts": {
            "get": {
                "description": "Get a list of all contracts",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "contracts"
                ],
                "summary": "List all contracts",
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/models.Contract"
                            }
                        }
                    }
                }
            },
            "post": {
                "description": "Create a new contract instance from a blueprint",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "contracts"
                ],
                "summary": "Create a contract",
                "parameters": [
                    {
                        "description": "Contract JSON",
                        "name": "contract",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/models.Contract"
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "Created",
                        "schema": {
                            "$ref": "#/definitions/models.Contract"
                        }
                    }
                }
            }
        },
        "/contracts/{id}": {
            "get": {
                "description": "Get contract details by ID",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "contracts"
                ],
                "summary": "Get a contract",
                "parameters": [
                    {
                        "type": "string",
                        "description": "Contract ID",
                        "name": "id",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/models.Contract"
                        }
                    }
                }
            }
        },
        "/contracts/{id}/status": {
            "patch": {
                "description": "Transition contract status (e.g. APPROVED, SIGNED)",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "contracts"
                ],
                "summary": "Update contract status",
                "parameters": [
                    {
                        "type": "string",
                        "description": "Contract ID",
                        "name": "id",
                        "in": "path",
                        "required": true
                    },
                    {
                        "description": "Status Object {status: string}",
                        "name": "status",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "type": "object"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/models.Contract"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "models.Blueprint": {
            "type": "object",
            "properties": {
                "created_at": {
                    "type": "string"
                },
                "description": {
                    "type": "string"
                },
                "id": {
                    "type": "string"
                },
                "schema": {
                    "description": "Stored as JSON string",
                    "type": "string"
                },
                "title": {
                    "type": "string"
                }
            }
        },
        "models.Contract": {
            "type": "object",
            "properties": {
                "blueprint": {
                    "$ref": "#/definitions/models.Blueprint"
                },
                "blueprint_id": {
                    "type": "string"
                },
                "created_at": {
                    "type": "string"
                },
                "data": {
                    "description": "Stored as JSON string",
                    "type": "string"
                },
                "id": {
                    "type": "string"
                },
                "status": {
                    "$ref": "#/definitions/models.ContractStatus"
                },
                "updated_at": {
                    "type": "string"
                }
            }
        },
        "models.ContractStatus": {
            "type": "string",
            "enum": [
                "CREATED",
                "APPROVED",
                "SENT",
                "SIGNED",
                "LOCKED",
                "REVOKED"
            ],
            "x-enum-varnames": [
                "StatusCreated",
                "StatusApproved",
                "StatusSent",
                "StatusSigned",
                "StatusLocked",
                "StatusRevoked"
            ]
        }
    }
}